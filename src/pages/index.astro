		<!-- Favicons Meta -->
		<meta name="application-name" content=" "/>
		<meta name="msapplication-TileColor" content="#FFFFFF"/>
		<meta name="msapplication-TileImage" content="https://websorcier.com/assets/icons/favicons/mstile-144x144.png"/>
		<meta name="msapplication-square70x70logo" content="https://websorcier.com/assets/icons/favicons/mstile-70x70.png"/>
